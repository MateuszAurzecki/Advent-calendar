#include<iostream>
#include<fstream>
#include<string>
#include <vector>
using namespace std;

void day1_part1();
void day1_part2();

fstream data;

int main() {
	
	
	day1_part1();
	day1_part2();


	system("pause");
}


void day1_part1() {

	fstream data;
	string bufor;
	int number;
	long long add_sum = 0;
	data.open("C:\\Users\\mateu\\Desktop\\adv.txt", ios::in);
	if (data.good() == false)
	{
		cout << "File could not be open!";
		system("pause");
		exit(0);
	}

	while (getline(data, bufor)) {
		number = stoi(bufor);
		add_sum += number;
	}

	cout << add_sum << " this is adding result" << endl;
	data.close();
}





void day1_part2() {

	fstream data;
	string bufor;
	int number;

	if (data.good() == false)
	{
		cout << "File could not be open!";
		system("pause");
		exit(0);

	}


	long long result = 0;
	int loop_number = 0;
	vector <long> tab = { 0 };
	bool keep_working = true;

	while (keep_working) {
		data.open("C:\\Users\\mateu\\Desktop\\adv.txt", ios::in);
		while (getline(data, bufor)) {
			number = stoi(bufor);
			result += number;
			if (find(tab.begin(), tab.end(), result) != tab.end()) {
				cout << result << " this is reapeating number" << endl;
				keep_working = false;
				break;
			}
			tab.push_back(result);

		}
		data.close();
		loop_number++;
	}
	cout << "loop nr: " << loop_number << endl;

}
